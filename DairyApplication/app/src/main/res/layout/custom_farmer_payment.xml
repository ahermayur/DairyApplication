<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/cus_farmer_payment_date"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" Date "
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000" />
    <TextView
        android:id="@+id/cus_farmer_payment_milk"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" Milk "
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000" />
    <TextView
        android:id="@+id/cus_farmer_payment_fat"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" Fat "
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000" />
    <TextView
        android:id="@+id/cus_farmer_payment_snf"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" SNF "
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000" />
    <TextView
        android:id="@+id/cus_farmer_payment_rate"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" Rate "
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000" />
</LinearLayout>