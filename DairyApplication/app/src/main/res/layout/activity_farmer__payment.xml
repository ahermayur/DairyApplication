<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farmer Name"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#3598d8"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" previous "
            android:layout_gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#3598d8" />

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=" 1-3-17\n - \n15-3-17 "
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#3598d8"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text=" Next "
            android:layout_gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#3598d8"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="8dp"
        android:id="@+id/ll_bottom"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/tv_payment_total_milk"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/holo_purple"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_payment_avg_fat"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/holo_purple" />
            <TextView
                android:id="@+id/tv_payment_avg_snf"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/holo_purple" />
            <TextView
                android:id="@+id/tv_payment_avg_rate"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/holo_purple" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:gravity="right"
                android:layout_weight="1"
                android:textSize="28dp"
                android:layout_height="wrap_content"
                android:text="Total : " />
            <com.daasuu.cat.CountAnimationTextView
                android:id="@+id/tv_payment_total_payment"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="28dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                />
        </LinearLayout>

    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/ll_bottom"
        android:layout_alignEnd="@+id/linearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text=" Date "
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/holo_purple" />
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text=" Milk "
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/holo_purple" />
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text=" Fat "
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/holo_purple" />
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text=" SNF "
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/holo_purple" />
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text=" Rate "
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/holo_purple" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"/>
            <ListView
                android:id="@+id/lv_farmer_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
