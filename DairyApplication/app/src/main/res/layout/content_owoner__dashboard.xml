<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FF39CCB3"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mayur.dairyapplication.Owner.Owner_Dashboard"
    tools:showIn="@layout/activity_owoner__dashboard">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_width="170dp">
                <TextView
                    android:drawableTop="@drawable/milkbottle"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:text="Purchase Milk"
                    android:padding="5dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:drawablePadding="5dp"
                    android:id="@+id/tv_menu_owner_purchase" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"

                android:padding="5dp"
                android:layout_width="170dp">
                <TextView
                    android:drawableTop="@drawable/update"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:text="Update Milk Details"
                    android:padding="5dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:drawablePadding="5dp"
                    android:id="@+id/tv_menu_update_milk" />

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"

                android:padding="5dp"
                android:layout_width="170dp">
                <TextView
                    android:drawableTop="@drawable/rupees"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:text="Set Milk \n Rate"
                    android:padding="5dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:drawablePadding="5dp"
                    android:id="@+id/tv_menu_owner_setrate" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"

                android:padding="5dp"
                android:layout_width="170dp">
                <TextView
                    android:drawableTop="@drawable/view"

                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:text="View Rate Table"
                    android:padding="5dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:drawablePadding="5dp"
                    android:id="@+id/tv_menu_owner_view_rate" />

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"

                android:padding="5dp"
                android:layout_width="170dp">
                <TextView
                    android:drawableTop="@drawable/bar"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:text="Daily Reports"
                    android:padding="5dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:drawablePadding="5dp"
                    android:id="@+id/tv_menu_owner_daily_collection" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"

                android:padding="5dp"
                android:layout_width="170dp">
                <TextView
                    android:drawableTop="@drawable/youtube"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:text="Watch Video"
                    android:padding="5dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:drawablePadding="5dp"
                    android:id="@+id/tv_menu_owner_watch_video" />

            </android.support.v7.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"

                android:padding="5dp"
                android:layout_width="170dp">
                <TextView
                    android:drawableTop="@drawable/addfarmer"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:text="Add Farmer"
                    android:padding="5dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:drawablePadding="5dp"
                    android:id="@+id/tv_menu_owner_register_farmer" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"

                android:padding="5dp"
                android:layout_width="170dp">
                <TextView
                    android:drawableTop="@drawable/farmer"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:text="Farmers"
                    android:padding="5dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:drawablePadding="5dp"
                    android:id="@+id/tv_menu_owner_view_farmer" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
